# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build backend`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t backend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system backend && \
    adduser --system -G backend backend

COPY dist/apps/backend /app/backend/
COPY apps/backend/project.json /app/backend/project.json
COPY package.json .
COPY nx.json .
COPY tsconfig.base.json .
RUN chown -R backend:backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm install

CMD [ "npx", "nx", "serve", "backend" ]
